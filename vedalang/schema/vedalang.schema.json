{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://veda-devtools/vedalang.schema.json",
  "title": "VedaLang Model",
  "description": "Schema for VedaLang source files - a typed DSL for VEDA models",
  "type": "object",
  "required": ["model"],
  "properties": {
    "model": {
      "type": "object",
      "required": ["name", "regions", "commodities", "processes"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Model name identifier"
        },
        "description": {
          "type": "string",
          "description": "Model description"
        },
        "regions": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "List of region codes"
        },
        "timeslices": {
          "$ref": "#/$defs/timeslices",
          "description": "Timeslice structure for intra-annual temporal resolution"
        },
        "commodities": {
          "type": "array",
          "items": { "$ref": "#/$defs/commodity" },
          "description": "Commodity definitions"
        },
        "processes": {
          "type": "array",
          "items": { "$ref": "#/$defs/process" },
          "description": "Process definitions"
        },
        "scenarios": {
          "type": "array",
          "items": { "$ref": "#/$defs/scenario" },
          "description": "Scenario definitions (TFM parameters)"
        },
        "trade_links": {
          "type": "array",
          "items": { "$ref": "#/$defs/trade_link" },
          "description": "Inter-regional trade links"
        }
      }
    }
  },
  "$defs": {
    "trade_link": {
      "type": "object",
      "description": "Inter-regional trade link for commodity exchange",
      "required": ["origin", "destination", "commodity"],
      "properties": {
        "origin": {
          "type": "string",
          "description": "Origin region code"
        },
        "destination": {
          "type": "string",
          "description": "Destination region code"
        },
        "commodity": {
          "type": "string",
          "description": "Traded commodity name"
        },
        "bidirectional": {
          "type": "boolean",
          "default": true,
          "description": "Whether trade flows in both directions"
        },
        "efficiency": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Transport efficiency (1.0 = no losses)"
        }
      },
      "additionalProperties": false
    },
    "timeslice_level": {
      "type": "object",
      "description": "A single timeslice code within a level (season/weekly/daynite)",
      "required": ["code"],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z]{1,3}$",
          "description": "Short code (1-3 uppercase chars) for this timeslice"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name (e.g., 'Summer', 'Day')"
        }
      },
      "additionalProperties": false
    },
    "timeslices": {
      "type": "object",
      "description": "Timeslice structure for intra-annual variation",
      "properties": {
        "season": {
          "type": "array",
          "description": "Seasonal timeslice codes (e.g., Summer, Winter)",
          "items": { "$ref": "#/$defs/timeslice_level" }
        },
        "weekly": {
          "type": "array",
          "description": "Weekly timeslice codes (rarely used)",
          "items": { "$ref": "#/$defs/timeslice_level" }
        },
        "daynite": {
          "type": "array",
          "description": "Day/night timeslice codes",
          "items": { "$ref": "#/$defs/timeslice_level" }
        },
        "fractions": {
          "type": "object",
          "description": "Year fraction for each composite timeslice (must sum to 1.0). Keys are auto-generated: SEASON + WEEKLY + DAYNITE.",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "additionalProperties": false
    },
    "commodity": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string", "description": "Commodity identifier" },
        "type": { 
          "type": "string",
          "enum": ["energy", "material", "emission", "demand"],
          "description": "Commodity type category"
        },
        "unit": { "type": "string", "description": "Unit of measurement" },
        "description": { "type": "string" }
      }
    },
    "process": {
      "type": "object",
      "required": ["name", "sets"],
      "properties": {
        "name": { "type": "string", "description": "Process identifier" },
        "description": { "type": "string" },
        "sets": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Process set memberships (e.g., ELE, IND)"
        },
        "activity_unit": { "type": "string", "default": "PJ" },
        "capacity_unit": { "type": "string", "default": "GW" },
        "inputs": {
          "type": "array",
          "items": { "$ref": "#/$defs/flow" },
          "description": "Input commodity flows"
        },
        "outputs": {
          "type": "array",
          "items": { "$ref": "#/$defs/flow" },
          "description": "Output commodity flows"
        },
        "efficiency": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Process efficiency (0-1)"
        },
        "invcost": {
          "type": "number",
          "minimum": 0,
          "description": "Investment cost per unit capacity (NCAP_COST)"
        },
        "fixom": {
          "type": "number",
          "minimum": 0,
          "description": "Fixed O&M per unit capacity per year (FOM)"
        },
        "varom": {
          "type": "number",
          "minimum": 0,
          "description": "Variable O&M per unit activity (VOM)"
        },
        "life": {
          "type": "number",
          "minimum": 0,
          "description": "Technical lifetime in years (LIFE)"
        },
        "cost": {
          "type": "number",
          "minimum": 0,
          "description": "Activity cost for supply processes (ACT_COST)"
        },
        "activity_bound": {
          "$ref": "#/$defs/bound",
          "description": "Bounds on annual activity (ACT_BND)"
        },
        "cap_bound": {
          "$ref": "#/$defs/bound",
          "description": "Bounds on total installed capacity (CAP_BND)"
        },
        "ncap_bound": {
          "$ref": "#/$defs/bound",
          "description": "Bounds on new capacity per period (NCAP_BND)"
        }
      }
    },
    "bound": {
      "type": "object",
      "description": "Bound specification with optional upper, lower, and fixed limits",
      "properties": {
        "up": {
          "type": "number",
          "minimum": 0,
          "description": "Upper bound (maximum allowed)"
        },
        "lo": {
          "type": "number",
          "minimum": 0,
          "description": "Lower bound (minimum required)"
        },
        "fx": {
          "type": "number",
          "minimum": 0,
          "description": "Fixed bound (exact value)"
        }
      },
      "additionalProperties": false
    },
    "flow": {
      "type": "object",
      "required": ["commodity"],
      "properties": {
        "commodity": { "type": "string", "description": "Reference to commodity name" },
        "share": { "type": "number", "minimum": 0, "maximum": 1, "default": 1.0 }
      }
    },
    "scenario": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { 
          "type": "string", 
          "description": "Scenario name (becomes folder name: Scen_{name})"
        },
        "description": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["commodity_price", "demand_projection"],
          "description": "Type of scenario parameter"
        },
        "commodity": {
          "type": "string",
          "description": "Target commodity for price scenarios"
        },
        "interpolation": {
          "type": "string",
          "enum": [
            "none",
            "interp_only",
            "interp_extrap_eps",
            "interp_extrap",
            "interp_extrap_back",
            "interp_extrap_forward"
          ],
          "description": "VEDA interpolation/extrapolation mode (REQUIRED). Maps to year=0 option codes: none=-1, interp_only=1, interp_extrap_eps=2, interp_extrap=3, interp_extrap_back=4, interp_extrap_forward=5"
        },
        "values": {
          "type": "object",
          "description": "Year -> value mapping for time-series data (sparse OK, compiler expands)",
          "additionalProperties": { "type": "number" },
          "propertyNames": {
            "pattern": "^[12][0-9]{3}$",
            "description": "Keys must be 4-digit years"
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "commodity_price" } } },
          "then": { "required": ["commodity", "values", "interpolation"] }
        },
        {
          "if": { "properties": { "type": { "const": "demand_projection" } } },
          "then": { "required": ["commodity", "values", "interpolation"] }
        }
      ]
    },
    "time_series": {
      "type": "object",
      "description": "Generic time-series specification with REQUIRED interpolation mode",
      "properties": {
        "interpolation": {
          "type": "string",
          "enum": [
            "none",
            "interp_only",
            "interp_extrap_eps",
            "interp_extrap",
            "interp_extrap_back",
            "interp_extrap_forward"
          ],
          "description": "VEDA interpolation/extrapolation mode (REQUIRED)"
        },
        "values": {
          "type": "object",
          "description": "Year -> value mapping",
          "additionalProperties": { "type": "number" },
          "propertyNames": { "pattern": "^[12][0-9]{3}$" }
        }
      },
      "required": ["values", "interpolation"]
    }
  }
}
